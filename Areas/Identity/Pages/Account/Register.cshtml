@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<h1>@ViewData["Title"]</h1>

<div class="row">
    <div class="col">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4>Create a new account.</h4>
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <!--
            <div class="form-group">
                <label asp-for="Input.TEMPLATE"></label>
                <input asp-for="Input.TEMPLATE" class="form-control" />
                <span asp-validation-for="Input.TEMPLATE" class="text-danger"></span>
            </div>
            -->
            <div class="form-group row">
                <div class="col">
                    <label asp-for="Input.FirstName"></label>
                    <input asp-for="Input.FirstName" class="form-control" />
                    <span asp-validation-for="Input.FirstName" class="text-danger"></span>
                </div>
                <div class="col">
                    <label asp-for="Input.LastName"></label>
                    <input asp-for="Input.LastName" class="form-control" />
                    <span asp-validation-for="Input.LastName" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-group row">
                <div class="col">
                    <label asp-for="Input.Password"></label>
                    <input asp-for="Input.Password" class="form-control" />
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div class="col">
                    <label asp-for="Input.ConfirmPassword"></label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>
            </div>


            <div class="form-group row">
                <div class="col">
                    <label asp-for="Input.AddressLine1"></label>
                    <input asp-for="Input.AddressLine1" class="form-control" />
                    <span asp-validation-for="Input.AddressLine1" class="text-danger"></span>
                </div>
                <div class="col">
                    <label asp-for="Input.AddressLine2"></label>
                    <input asp-for="Input.AddressLine2" class="form-control" />
                    <span asp-validation-for="Input.AddressLine2" class="text-danger"></span>
                </div>
            </div>
            
            <div class="form-group row">
                <div class="col col-5">
                    <label asp-for="Input.City"></label>
                    <input asp-for="Input.City" class="form-control" />
                    <span asp-validation-for="Input.City" class="text-danger"></span>
                </div>
                <div class="col col-2">
                    <label asp-for="Input.Region"></label>
                    <input asp-for="Input.Region" class="form-control" />
                    <span asp-validation-for="Input.Region" class="text-danger"></span>
                </div>
                <div class="col col-2">
                    <label asp-for="Input.ZipCode"></label>
                    <input asp-for="Input.ZipCode" class="form-control" />
                    <span asp-validation-for="Input.ZipCode" class="text-danger"></span>
                </div>
                <div class="col col-3">
                    <label asp-for="Input.Country"></label>
                    <input asp-for="Input.Country" class="form-control" />
                    <span asp-validation-for="Input.Country" class="text-danger"></span>
                </div>
            </div>

            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
